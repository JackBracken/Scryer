<div class="modal fade" id="feedbackModal" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Feedback</h4>
      </div>
      <%= form_for(Feedback.new, remote: true) do |f|  %>
        <div class="modal-body">
          <p class="lead">
            Thanks for your time! We need honest feedback to help us improve. If you would, let us know
          what you think would improve Scryer or what bothers you.
          </p>
          <div class="form-group">
            <label for="feedback_text">Thoughts?</label>
            <%= f.text_area :feedback_text, rows: 5, class: 'form-control' %>
          </div>
          <div>Would you recommend Scryer to a friend?</div>
          <div class="form-group text-center">

            <% (1..10).each do |i| %>
              <div class="radio-inline">
                <label>
                  <%= f.radio_button :score, i %>
                  <%= i %>
                </label>
              </div>
            <% end %>
          </div>
        </div>
        <div class="modal-footer">

          <i id="spinner" class="icon-spinner icon-spin icon-large" style="display: none;"></i>
          <button type="button" class="btn btn-default" data-dismiss="modal">Nevermind</button>
          <button type="submit" class="btn btn-success">Submit</button>
        </div>
      <% end %>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
