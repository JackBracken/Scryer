<% if has_results? %>
    <h4 class="page-header">
      <%= link_to 'Search', root_path(search: @search) %>
      in
      <%= Fandom.name_sentence(@fandoms) %>
      <small><%= number_with_delimiter(@search_results.hits) %> Stories Found</small>
    </h4>
    <!-- TODO: graphs/stats -->
    <!-- TODO: Drilldown links / facets -->

    <% content_for(:pagination_info) do %>
        <%= page_entries_info @search_results.pagination %>
    <% end %>
    <% content_for(:pagination) do %>
      <%= paginate @search_results.pagination %>
    <% end %>

    <div>
      <%= yield :pagination_info %>
    </div>
    <div class="text-right">
      <%= yield :pagination %>
    </div>

    <div class="clearfix"></div>
<% end %>
<!--<%= @search %>-->
<%= (render :partial => 'story_result', :collection => @search_results.results) || (render :partial => 'empty') %>

<% if has_results? %>
    <div>
      <%= yield :pagination_info %>
    </div>
    <div class="text-right">
      <%= yield :pagination %>
    </div>
<% end %>
